<form class="my-3" action="/ideas/{{idea.id}}?_method=PUT" method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="title" value="{{idea.title}}">
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control">
      {{{idea.description}}}
    </textarea>
  </div>
  <div class="form-group">
    <label for="status">Idea Status</label>
    <select class="form-control" id="status" name="status">
      <option value="public" {{compareValues 'public' idea.status}}>public</option>
      <option value="private" {{compareValues 'private' idea.status}}>private</option>
    </select>
  </div>
  <div class="form-group form-check">
    <input type="checkbox" class="form-check-input" id="allowComment" {{#if idea.allowComment}} checked="true" {{/if}} name="allowComment">
    <label class="form-check-label" for="allowComment">Allow Comments</label>
  </div>
  <button type="submit" class="btn btn-primary">Edit Idea</button>
</form>